<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/WrappedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/spotifyGreen"
        android:padding="10dp"
        android:text="Your Wrapped"
        android:textSize="25dp"
        android:textStyle="bold"
        android:onClick="openWrapped"
        app:layout_constraintBottom_toTopOf="@+id/DuoBTN"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/DuoBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:backgroundTint="@color/spotifyGreen"
        android:padding="10dp"
        android:text="Get a Duo"
        android:textSize="25dp"
        android:textStyle="bold"
        android:onClick="openDuo"
        app:layout_constraintBottom_toTopOf="@+id/LLMBTN"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/LLMBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        android:text="LLM"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/spotifyGreen"
        android:onClick="openLLM"
        app:layout_constraintBottom_toTopOf="@+id/SettingsBTN"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/SettingsBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:padding="10dp"
        android:text="Settings"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/spotifyGreen"
        android:onClick="openSettings"
        app:layout_constraintBottom_toTopOf="@+id/LogoutBTN"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/LogoutBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:padding="10dp"
        android:text="Lougout"
        android:textSize="25dp"
        android:textStyle="bold"
        android:backgroundTint="@color/spotifyGreen"
        android:onClick="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>