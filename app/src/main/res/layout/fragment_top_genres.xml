<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/toowe'ls"
    xmlns:tools2="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/genre_gradient_list"
    android:id="@+id/topGenreBackground"
    tools:context=".TopGenresFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/archivo_black"
            android:padding="5dp"
            android:text="Spotify\nunWrapped"
            android:textColor="#ff3419"
            android:textSize="20sp"
            android:textStyle="bold"
            android:alpha="0.65"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/miniFrame1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="292"
            android:rotationX="100"
            android:rotationY="-330"
            android:src="#25ff9ea0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.729"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.141" />

        <ImageView
            android:id="@+id/miniFrame3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="-262"
            android:rotationX="215"
            android:rotationY="113"
            android:alpha="0.3"
            android:src="@drawable/transition1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.729"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.141" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="40sp"
            android:text="your top genres."
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="10dp"
            android:textColor="#d4ffc7"
            android:textStyle="bold"/>

        <Space
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="10dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:rotation="15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#6913ff03"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="#1"
                android:textColor="@color/genre1"
                android:textSize="45sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/genre1"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:backgroundTint="#6913ff03"
                android:fontFamily="@font/bungee_shade"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Genre1"
                android:textAllCaps="true"
                android:textColor="@color/genre1"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rotation="7.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="#2"
                android:textStyle="bold"
                android:textColor="@color/genre2"
                android:textSize="45sp"
                android:backgroundTint="#6913ff03"/>

            <TextView
                android:id="@+id/genre2"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:backgroundTint="#6903ff9e"
                android:fontFamily="@font/bungee_shade"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="genre2"
                android:textAllCaps="true"
                android:textColor="@color/genre2"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="#3"
                android:textStyle="bold"
                android:textColor="@color/genre3"
                android:textSize="45sp"
                android:backgroundTint="#6913ff03"/>

            <TextView
                android:id="@+id/genre3"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:backgroundTint="#6903cdff"
                android:fontFamily="@font/bungee_shade"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Genre3"
                android:textAllCaps="true"
                android:textColor="@color/genre3"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rotation="-7.5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="#4"
                android:textStyle="bold"
                android:textColor="@color/genre4"
                android:textSize="45sp"
                android:backgroundTint="#6913ff03"/>

            <TextView
                android:id="@+id/genre4"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:backgroundTint="#69035fff"
                android:fontFamily="@font/bungee_shade"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Genre4"
                android:textAllCaps="true"
                android:textColor="@color/genre4"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:rotation="-15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="#5"
                android:textStyle="bold"
                android:textColor="@color/genre5"
                android:textSize="45sp"
                android:backgroundTint="#6913ff03"/>

            <TextView
                android:id="@+id/genre5"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_marginTop="0dp"
                android:layout_weight="3"
                android:backgroundTint="#69030bff"
                android:fontFamily="@font/bungee_shade"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Genre5"
                android:textAllCaps="true"
                android:textColor="@color/genre5"
                android:textSize="48sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>